@{
    var users = ViewBag.Users as IEnumerable<dynamic>;
}

<h2>Compose Message</h2>

<form action="/Messages/Compose" method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label for="recipientId" class="form-label">Recipient</label>
        <select id="recipientId" name="recipientId" class="form-control" required>
            <option value="">Select a recipient</option>
            @foreach (var user in users)
            {
                <option value="@user.UserId">@user.Username</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label for="content" class="form-label">Message</label>
        <textarea id="content" name="content" class="form-control" rows="4" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
</form>
