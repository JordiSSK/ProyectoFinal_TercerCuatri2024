@model IEnumerable<ProyectoFinal_JorgeSayegh.Models.Message>

@{
    Layout = null; // Exclude layout to prevent nav bar duplication
}

<h3>Sent Messages</h3>

@foreach (var message in Model)
{
    <div class="card mb-3">
        <div class="card-body">
            <h5>To: @message.Recipient.Username</h5>
            <p>@message.Content</p>
            <small class="text-muted">Sent: @message.SentAt</small>
        </div>
    </div>
}
