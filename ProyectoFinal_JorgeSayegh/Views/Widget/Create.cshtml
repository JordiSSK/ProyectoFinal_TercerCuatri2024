@model ProyectoFinal_JorgeSayegh.Models.Widget

<h2>Create Widget</h2>

<form action="/Widget/Create" method="post" class="mt-4">
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" id="name" name="Name" class="form-control" required value="@Model?.Name" />
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <input type="text" id="description" name="Description" class="form-control" value="@Model?.Description" />
        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label for="type" class="form-label">Type</label>
        <input type="text" id="type" name="Type" class="form-control" required value="@Model?.Type" />
        @Html.ValidationMessageFor(m => m.Type, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label for="dataUrl" class="form-label">Data URL</label>
        <input type="url" id="dataUrl" name="DataUrl" class="form-control" value="@Model?.DataUrl" />
        @Html.ValidationMessageFor(m => m.DataUrl, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label for="refreshInterval" class="form-label">Refresh Interval (seconds)</label>
        <input type="number" id="refreshInterval" name="RefreshInterval" class="form-control" value="@Model?.RefreshInterval" />
        @Html.ValidationMessageFor(m => m.RefreshInterval, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>